<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnHuffman"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_color"
        android:backgroundTint="#FF5733"
        android:text="HUFFMAN" />

    <Button
        android:id="@+id/btnLzw"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:background="@drawable/button_color"
        android:backgroundTint="#FF5733"
        android:text="LZW" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="Metodo de compresion:"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="172dp"
        android:text="Mis compresiones:"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnMisCompresiones"
        android:layout_width="168dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnHuffman"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_color"
        android:backgroundTint="#FF5733"
        android:text="Mis compresiones" />
</RelativeLayout>